{
  "name": "commissions-app",
  "version": "0.0.0",
  "description": "Boards and Commissions GraphQL server and webapp",
  "private": true,
  "license": "CC0-1.0",
  "scripts": {
    "prebuild": "rimraf build && npm run generate-graphql-schema",
    "build": "tsc",
    "dev": "npm run prebuild && tsc-watch --onSuccess \"npm run start\"",
    "prepare": "npm run build",
    "start": "node build/server/start",
    "test": "jest",
    "generate-graphql-schema": "mkdir -p graphql && ts2gql src/server/graphql/schema.ts > graphql/schema.graphql"
  },
  "jest": {
    "preset": "@cityofboston/config-jest"
  },
  "dependencies": {
    "@cityofboston/hapi-common": "^0.0.0",
    "@cityofboston/mssql-common": "^0.0.0",
    "apollo-server-hapi": "^1.3.6",
    "boom": "^7.2.0",
    "dataloader": "^1.4.0",
    "dotenv": "^5.0.1",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.0",
    "hapi": "^17.4.0",
    "hapi-accept-language2": "^2.0.3",
    "mssql": "^4.1.0",
    "node-cleanup": "^2.1.2"
  },
  "devDependencies": {
    "@cityofboston/config-jest": "^0.0.0",
    "@cityofboston/config-typescript": "^0.0.0",
    "@cityofboston/graphql-typescript": "^0.0.0",
    "@cityofboston/mssql-typescript": "^0.0.0",
    "@types/jest": "^22.2.3",
    "@types/mssql": "^4.0.7",
    "@types/node": "^9.6.5",
    "faker": "^4.1.0",
    "jest": "^22.0.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.0.0",
    "ts-node": "^6.0.2",
    "ts2gql": "CityOfBoston/ts2gql#dist",
    "tsc-watch": "^1.0.21",
    "typescript": "^2.8.1"
  }
}
