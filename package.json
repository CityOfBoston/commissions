{
  "name": "commissions",
  "description": "Boards and Commissions server",
  "version": "0.0.0",
  "license": "CC0-1.0",
  "private": true,
  "engines": {
    "node": "^8.0.0",
    "yarn": "^1.6.0"
  },
  "workspaces": {
    "packages": [
      "modules-js/*",
      "services-js/*",
      "templates/js-*",
      "templates/js-*/build/*"
    ],
    "nohoist": [
      "**/@cityofboston/config-*",
      "**/knex",
      "**/@rmp135/sql-ts"
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "prepublish": "lerna run --stream prepublish",
    "prepare": "lerna run --stream prepare",
    "precommit": "lint-staged",
    "prepush": "lerna run --no-sort --stream --since origin/develop test -- --no-cache",
    "test": "lerna run test --no-sort",
    "test:since": "lerna run test --no-sort --since"
  },
  "shippy": {
    "build": "./deploy/build-service-container.sh"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --quiet"
  },
  "devDependencies": {
    "@yarnpkg/lockfile": "^1.0.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "husky": "^0.14.3",
    "khaos": "^0.9.3",
    "lerna": "^3.0.0-beta",
    "lint-staged": "^7.0.4",
    "prettier": "^1.12.0",
    "typescript": "^2.8.1",
    "typescript-eslint-parser": "^14.0.0"
  }
}
